---
import "../styles/global.css";

export interface Props {
  frontmatter: {
    title: string;
    projectName: string;
    canonical?: string;
    authors?: string[];
    date?: string;
    abstract?: string;
  };
}

const {
  title,
  projectName = "Project",
  authors = [],
  date = new Date().toLocaleDateString("en-US", {
    month: "long",
    year: "numeric",
  }),
  abstract,
  canonical,
} = Astro.props.frontmatter;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={abstract || title} />
    <meta name="robots" content="index, follow" />
    {canonical && <link rel="canonical" href={canonical} />}
  </head>
  <body class="font-mono text-sm leading-relaxed bg-white text-black">
    <main class="w-full max-w-xl xl:max-w-4xl mx-auto px-6 md:px-8 py-12">
      <a
        href="/projects"
        class="text-blue-500 hover:underline mb-8 print:hidden">go back</a
      >
      <header
        class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-8 pb-6 border-b border-gray-300"
      >
        <div class="space-y-1">
          <p class="text-gray-600">Project</p>
          <p>Codename: {projectName}</p>
        </div>
        <div class="text-right space-y-1">
          {
            authors.map((author) => (
              <div>
                <p class="font-medium">{author}</p>
              </div>
            ))
          }
          <p class="text-gray-600">{date}</p>
        </div>
      </header>

      <article class="rfc-content">
        <slot />
      </article>
    </main>
  </body>
</html>

<style>
  @reference "tailwindcss";

  .rfc-content {
    @apply text-base;
  }

  .rfc-content :global(h1) {
    @apply text-lg font-bold my-4 text-center;
  }

  .rfc-content :global(h2) {
    @apply text-base font-bold mt-4 mb-2;
  }

  .rfc-content :global(h3) {
    @apply text-sm font-bold mt-3 mb-2;
  }

  .rfc-content :global(p) {
    @apply mb-4 pl-4;
  }

  .rfc-content :global(ul),
  .rfc-content :global(ol) {
    @apply my-4 pl-6;
  }

  .rfc-content :global(ul) {
    @apply list-disc;
  }

  .rfc-content :global(ol) {
    @apply list-decimal;
  }

  .rfc-content :global(li) {
    @apply mb-1;
  }

  .rfc-content :global(a) {
    @apply text-blue-600 underline;
    @apply text-wrap;
    @apply break-all;
  }

  .rfc-content :global(code) {
    @apply text-xs bg-gray-100 px-1 py-0.5 rounded;
  }

  /* .rfc-content :global(pre) {
    @apply text-xs bg-gray-100 p-4 rounded overflow-x-auto my-4;
  } */

  .rfc-content :global(pre code) {
    @apply bg-transparent p-0;
  }

  .rfc-content :global(blockquote) {
    @apply border-l-4 border-gray-300 pl-4 my-4 italic text-gray-600;
  }

  .rfc-content :global(hr) {
    @apply my-8 border-gray-200;
  }

  .rfc-content :global(table) {
    @apply w-full border-collapse my-4;
  }

  .rfc-content :global(th),
  .rfc-content :global(td) {
    @apply border border-gray-300 px-3 py-2 text-left;
  }

  .rfc-content :global(th) {
    @apply font-bold bg-gray-50;
  }
</style>
