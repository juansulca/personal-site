---
import AWS from "../components/icons/AWS.astro";
import Rust from "../components/icons/Rust.astro";
import SkillCard from "../components/SkillCard.astro";
import SectionTitle from "../components/SectionTitle.astro";
import TypeScrip from "./icons/TypeScrip.astro";
import Mongo from "./icons/Mongo.astro";
import Node from "./icons/Node.astro";
import Svelte from "./icons/Svelte.astro";
