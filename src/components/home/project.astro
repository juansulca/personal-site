---
import { Image } from "astro:assets";
const { image, imageAlt } = Astro.props;
---

<div
  class="max-w-7xl md:w-3/4 md:min-h-[33vh] p-8 mx-auto mb-8 flex justify-center md:flex-row flex-col-reverse gap-8 border-gray-400 border-2 rounded-md sticky md:top-24 bg-gray-200 z-0"
>
  <div class="md:w-1/2 flex flex-col px-4 overflow-hidden">
    <slot />
  </div>
  <div class="md:h-auto h-64 overflow-hidden max-w-lg w-full md:w-1/2 mx-auto">
    <Image
      src={image}
      alt={imageAlt}
      class="mx-auto w-full h-full object-cover"
    />
  </div>
</div>
