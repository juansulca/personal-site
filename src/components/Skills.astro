        <SkillCard name="Rust">
            <Rust />
        </SkillCard>
        <SkillCard name="TypeScript">
            <TypeScrip />
        </SkillCard>
        <SkillCard name="MongoDB">
            <Mongo />
        </SkillCard>
        <SkillCard name="AWS">
            <AWS />
        </SkillCard>
        <SkillCard name="Node">
            <Node />
        </SkillCard>
        <SkillCard name="Svelte">
            <Svelte />
        </SkillCard>
        <SkillCard name="React">
            <React />
        </SkillCard>
        <SkillCard name="Deno">
            <Deno />
        </SkillCard>
        <SkillCard name="Python">
            <Python />
        </SkillCard>
        <SkillCard name="Go">
            <Go />
        </SkillCard>
        <SkillCard name="C/C++">
            <Cpp />
        </SkillCard>
        <SkillCard name="SQL">
            <PlanetScale />
        </SkillCard>
        <SkillCard name="Astro">
            <Rocket />
        </SkillCard>
        <SkillCard name="Vite">
            <Vite />
        </SkillCard>
        <SkillCard name="Next">
